# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
API_PREFIX=api
CORS_ORIGIN=https://dashboard.yourdomain.com

# Database
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=your-production-db-user
DB_PASSWORD=your-production-db-password
DB_NAME=dashboard_prod
DB_LOGGING=false
DB_SYNC=false
DB_SSL=true

# JWT
JWT_SECRET=your-super-secure-production-jwt-key
JWT_REFRESH_SECRET=your-super-secure-production-refresh-key
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=dashboard-api
JWT_AUDIENCE=dashboard-users

# Redis
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0
REDIS_TLS=true

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-production-access-key
AWS_SECRET_ACCESS_KEY=your-production-secret-key
AWS_S3_BUCKET=your-production-bucket-name

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Email
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USER=your-ses-smtp-user
SMTP_PASS=your-ses-smtp-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Dashboard

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Cache
CACHE_TTL=300

# Feature Flags
ENABLE_SWAGGER=false
ENABLE_COMPRESSION=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=true

# Security
COOKIE_DOMAIN=.yourdomain.com
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# Monitoring
SENTRY_DSN=your-production-sentry-dsn
SENTRY_ENVIRONMENT=production
ENABLE_PROMETHEUS=true

# Performance
CLUSTERING_ENABLED=true
MAX_OLD_SPACE_SIZE=2048
GC_INTERVAL=30000

# CDN
CDN_ENABLED=true
CDN_URL=https://cdn.yourdomain.com
CDN_CACHE_DURATION=2592000

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We are currently performing scheduled maintenance. Please try again later.
