# Application
NODE_ENV=development
PORT=3000
HOST=localhost
API_PREFIX=api
CORS_ORIGIN=*

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=dashboard_dev
DB_LOGGING=true
DB_SYNC=true
DB_SSL=false

# JWT
JWT_SECRET=your-super-secret-jwt-key-dev
JWT_REFRESH_SECRET=your-super-secret-refresh-key-dev
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d
JWT_ISSUER=dashboard-api-dev
JWT_AUDIENCE=dashboard-users-dev

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=your-bucket-name-dev

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Email
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASS=your-mailtrap-pass
EMAIL_FROM=noreply@dashboard.com
EMAIL_FROM_NAME=Dashboard Dev

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Cache
CACHE_TTL=60

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_COMPRESSION=true
ENABLE_FILE_UPLOAD=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false

# Monitoring
SENTRY_DSN=your-sentry-dsn
ENABLE_PROMETHEUS=true
